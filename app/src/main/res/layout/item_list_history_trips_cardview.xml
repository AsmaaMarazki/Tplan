<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cardElevation="4dp"
        android:layout_margin="6dp"
        cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:paddingTop="3dp"
                android:layout_weight="1"
                android:id="@+id/tripLayout"
                android:background="@drawable/tripimage1">

                <TextView
                    android:id="@+id/tripName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="TripName"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tripState"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:text="TripState"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/backgrounditemList"
                    android:src="@drawable/ic_place_black_24dp"
                    android:id="@+id/viewTripMapBtn"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="6dp">

                </ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4"
                android:padding="10dp"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgrounditemList"
                    android:src="@drawable/ic_share_black_24dp"
                    android:id="@+id/shareTripDetailsBtn">

                </ImageButton>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgrounditemList"
                    android:src="@drawable/item_list_upcoming_edit_24dp"
                    android:id="@+id/editTripDetailsBtn">

                </ImageButton>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgrounditemList"
                    android:src="@drawable/item_list_upcoming_delete_24dp"
                    android:id="@+id/deleteTripBtn">

                </ImageButton>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@color/backgrounditemList"
                    android:src="@drawable/ic_more_horiz_black_24dp"
                    android:id="@+id/moreOptionsBtn">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>