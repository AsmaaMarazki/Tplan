<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@android:color/white"
    android:backgroundTint="@color/endblueLight"
    tools:context="com.example.sulta.tplan.view.activities.HeadlessActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/trip_details"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headless_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headless_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/from"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headless_startpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/from"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/from"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/from"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/to"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headless_endpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/to"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/to"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="date:"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headless_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/date"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/notes"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headless_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/notes"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/notes"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />


    <android.support.v7.widget.CardView
        cardCornerRadius="3dp"
        cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginTop="20dp"
            android:gravity="center"

            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/TripLaterBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/backgrounditemList"
                android:src="@drawable/ic_watch_later_black_24dp">

            </ImageButton>

            <ImageButton
                android:id="@+id/deleteTripBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/backgrounditemList"
                android:src="@drawable/ic_delete_forever_black_36dp">

            </ImageButton>

            <ImageButton
                android:id="@+id/playTripDetailsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@color/backgrounditemList"
                android:src="@drawable/ic_near_me_black_24dp">

            </ImageButton>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
